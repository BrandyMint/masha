.row
  .col-sm-4.col-sm-offset-4
    .page-header
      %h1=t('.title')
    = simple_form_for @email_form, :url => password_resets_path,  :method => :post do |f|
      .form-group
        = f.input :email, label: false, input_html: {class: 'form-control'}, :autofocus => true
      = f.button :submit, t('devise.passwords.reset_password'), :class => 'btn btn-primary btn-lg btn-block'

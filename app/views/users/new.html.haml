.page-header
  %h1 Регистрация
.row
  .span12
    = simple_form_for @reg, :url => users_path do |f|
      = f.error_notification
      .form-inputs
        = f.input :name, :require => true
        = f.input :email, :require => true
        = f.input :password, :require => true, :as => :eye_password
      .form-actions
        = f.button :submit, :class => 'btn btn-primary'


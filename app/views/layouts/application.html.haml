!!!
%html
  %head
    = render 'layouts/head'
  %body.page-header-fixed{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation', header: :fixed
    #main.application-main-content{:role => "main"}
      .container
        .content
          .row
            .col-lg-12
              = render 'flash'
              = render_breadcrumbs :separator => ' / '
              = yield
      = render 'layouts/footer'

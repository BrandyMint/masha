%body{:class => "#{controller_name} #{action_name} page-header-#{header}"}
  %div{class: "navbar application-navbar navbar-#{header}-top" }
    .container
      = render 'layouts/navigation'
  #main.application-main-content{:role => "main"}
    .container
      .content
        .row
          .col-lg-12
            = render 'layouts/messages'
            = render_breadcrumbs :separator => ' / '
            = yield
    %footer.footer
      = render 'layouts/footer'
  = render 'layouts/convead_widget'

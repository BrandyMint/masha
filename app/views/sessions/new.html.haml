.page-header
  %h1 Вход

- @session ||= SessionForm.new

= simple_form_for @session, :url => sessions_path, :method => :create do |f|
  = f.error_notification
  .form-inputs
    = f.input :email
    = f.input :password, as: :eye_password
    = f.input :remember_me, as: :boolean
  .form-actions
    = f.button :submit, 'Войти', :class => 'btn btn-primary'

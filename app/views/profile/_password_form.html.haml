= link_to set_change_password_title, 'javascript:void(0)', {:id=>'j_password_link', 'data-toggle'=>"collapse", 'data-target'=>"#j_password_form"}
#j_password_form.collapse.out
  = simple_form_for @password_form, :url => change_password_profile_path, :html => {:method => :post} do |f|
    = f.error_notification
    .form-group
      = f.input :password, input_html: {class: 'form-control'}
    .form-group
      = f.input :password_confirmation, input_html: {class: 'form-control'}
    .actions
      = f.button :submit, t('helpers.submit.update'), class: 'btn btn-primary btn-block'
= link_to set_change_password_title, 'javascript:void(0)', {:data=>{:toggle=>'collapse', :target=>'#j_password_form'}}
#j_password_form.collapse.out
  = simple_form_for @password_form, :url => change_password_profile_path, :html => {:method => :post, :class => 'form-inline'} do |f|
    = f.error_notification
    .form-group
      = f.input :password, input_html: {class: 'form-control'}, label: false
    .form-group
      = f.input :password_confirmation, input_html: {class: 'form-control'}, label: false
    .form-group.actions
      = f.button :submit, t('helpers.submit.update'), class: 'btn btn-primary'

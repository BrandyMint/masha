- if time_shifts.present?
  %table.table.table-sm.table-striped.table-hover.time-shifts-table
    %thead
      %th.col-2
        = t 'time_shifts.date'
      %th.col-1= t 'time_shifts.time'
      %th.col-1= t 'time_shifts.project'
      %th.col-2= t 'time_shifts.collaborator'
      %th.col-5= t 'time_shifts.description'
      %th.print-hide.col-1
    - time_shifts.each do |ts|
      - ts = TimeShiftDecorator.decorate ts
      %tr{class: ts.tr_class}
        %td{ data: {'cell-title' => "#{t 'time_shifts.date'}" } }
          = ts.date
          -#%br
          -#%small.text-color-gray-light
            -#= ficon 'pencil-1'
            -#= l ts.updated_at

        %td{ data: {'cell-title' => "#{t 'time_shifts.date'}" } }
          %b= human_hours ts.hours
        %td{ data: {'cell-title' => "#{t 'time_shifts.project'}" } }
          = ts.project
        %td{ data: {'cell-title' => "#{t 'time_shifts.collaborator'}" } }
          = ts.user
        %td{ data: {'cell-title' => "#{t 'time_shifts.description'}" } }
          %small.text-muted= ts.description
        %td.print-hide
          .d-grid
            = ts.update_link :css_class =>'btn', :label => t('.edit')

- else
  .alert.alert-warning Нет результатов

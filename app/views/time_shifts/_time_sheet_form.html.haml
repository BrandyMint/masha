= simple_form_for @time_sheet_form, :url => time_shifts_url,
  :method => :get, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  .form-inputs
    .row
      .span10
        = f.input :date_from, :as => :date_picker
        = f.input :date_to, :as => :date_picker
    .row
      .span5
        = f.input :project_id, :collection => viewable_projects_collection, :include_blank => 'Любой'
      .span5
        = f.input :user_id, :collection => available_users_to_view_collection, :include_blank => 'Любой'
    .row
      .span8
        = f.input :group_by, :collection => grouping_collection,  as: :radio_buttons, :item_wrapper_class => 'inline'
  .form-actions
    = button_tag type: 'submit', class: 'btn btn-success',
      :data => { 'disable-with' => t(:sending, :scope => [:simple_form, :button, :disable_with])} do
      = icon :tasks, :white
      = t :create, :scope => [:helpers, :submit, :time_sheet_form]
    = f.button :button, 'Сбросить', :type=>:reset, :class => 'pull-right'

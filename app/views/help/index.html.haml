          .card-body
            %p= t('help.sidebar.quick_commands')
            %div
              %code.d-block.mb-2= '/start'
              %code.d-block.mb-2= '/projects'
              %code.d-block.mb-2= '/add'
              %code.d-block.mb-2= '/report'

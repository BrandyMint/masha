= projects_link
%h1
  = @project.name
  = edit_project_link(@project)
- if current_user.can_create?(Membership.new(project: @project))
  = render 'form'

%h3 Участники

%table.table{role: 'membership-table'}
  = render partial: 'membership', collection: @project.memberships

- if @project.invites.present?
  %h3 Приглашенные
  %table.table
    - @project.invites.each do |i|
      - d = InviteDecorator.decorate i
      %tr
        %td.col-xs-5
          = i.email
        %td.col-xs-5
          = role_human i.role
        %td.col-xs-2
          = d.remove_link

%h3 Добавить участников
%ul
- current_user.users_available_for_project(@project).each do |u|
  %li{role: 'available-user'}
    = link_to u.name, project_memberships_url(@project, invite: {email: u.email, role: Membership::DEFAULT_ROLE}), method: :post, remote: true
